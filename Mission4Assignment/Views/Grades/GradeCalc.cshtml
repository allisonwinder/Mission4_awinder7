@{
    ViewData["Title"] = "Grade Calc";
}
@model GradeCalcModel;

<!--this page is for the grade calculator-->
<div id="div2">
    <h2>Grade Calculator</h2>
    <p>Input your grade as a percentage score</p>
    <form method="post">
        <label>Assignments:</label>
        <input id="assignments" asp-for="Assign"/><br />
        <label>Group Projects:</label>
        <input id="groupProjects" asp-for="Projects"/><br />
        <label>Quizzes:</label>
        <input id="quizzes" asp-for="Quiz" /><br />
        <label>Midterm Exam:</label>
        <input id="midExam" asp-for="Mid"/><br />
        <label>Final Exam:</label>
        <input id="finExam" asp-for="Final"/><br />
        <label>INTEX:</label>
        <input id="intex" asp-for="Tex"/><br />
        <br />
        <input id="sendit" type="submit" value="Send Grades" />
        <br />
        <div asp-validation-summary="All"></div>

    </form>
</div>